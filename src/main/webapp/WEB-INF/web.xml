<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Bookstore Web Application</display-name>

  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>org.example.servlet.RegisterServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>OptionStatisticServlet</servlet-name>
    <servlet-class>org.example.servlet.OptionStatisticServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StatisticMovieServlet</servlet-name>
    <servlet-class>org.example.servlet.StatisticMovieServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StatisticShowtimeServlet</servlet-name>
    <servlet-class>org.example.servlet.StatisticShowtimeServlet</servlet-class>
  </servlet>
  
  <!-- Trang mặc định khi mở website -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
